<div class="container p-3">

  <div class="row">
    <div class="col-4">
      <div class="card bg-light">
        <div class="card-body">
          <div class="form">
            <div class="form-group">
              <label>Keycloak server URL</label>
              {{input
                value=url
                class="form-control"
                placeholder="https://www.my-keycloak-server.com/auth"
              }}
            </div>
          </div>
          <div class="form-group">
            <label>Realm</label>
            {{input value=realm class="form-control" placeholder="my-realm"}}
          </div>
          <div class="form-group">
            <label>Client Id</label>
            {{input value=clientId class="form-control" placeholder="my-client-id"}}
          </div>
        </div>
        <div class="card-footer">
          <button {{action "initKeycloak"}} class="btn btn-block btn-primary">Store keycloak parameters</button>
        </div>
      </div>

      <h5 class="pt-5">Cookies</h5>
      <table class="table table-sm small">
        <thead>
          <th>Name</th>
          <th>Value</th>
        </thead>
        <tbody>
          {{#each allCookies as |cookie|}}
            <tr>
              <th>{{cookie.name}}</th>
              <td>{{cookie.value}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
    <div class="col-6">

      <ul>
        <li>{{#link-to "status"}}Status{{/link-to}}</li>
        <li>{{#link-to "protected"}}Protected route{{/link-to}}</li>
        <li>{{#link-to "model-a" 1}}Protected route to model A{{/link-to}}</li>
        <li>{{#link-to "model-a.model-b" 1 2}}Protected route to model B{{/link-to}}</li>
        <li>{{#link-to "unprotected"}}Unprotected route{{/link-to}}</li>
      </ul>

      {{outlet}}

    </div>
    <div class="col-2">
      <div>
        {{keycloak-session-link}}
      </div>
    </div>
  </div>

</div>

