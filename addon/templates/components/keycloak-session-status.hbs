{{#if session.ready}}

  <div class="m-2">
    <button type="button" {{action "refresh"}} class="btn btn-info">Refresh</button>
    <button type="button" {{action "login"}} class="btn btn-info">Login</button>
    <button type="button" {{action "logout"}} class="btn btn-info">Logout</button>
  </div>

  <table class="table">
    <tbody>
      <tr>
        <th>Ready</th>
        <td class="text-nowrap">
          {{session.ready}}
        </td>
      </tr>
      <tr>
        <th>Authenticated</th>
        <td class="text-nowrap">
          {{session.authenticated}}
        </td>
      </tr>
      <tr>
        <th>Name</th>
        <td class="text-nowrap">
          {{session.name}}
        </td>
      </tr>
      <tr>
        <th>Subject</th>
        <td class="text-nowrap">
          {{session.subject}}
        </td>
      </tr>
      <tr>
        <th>Refresh token</th>
        <td>
          {{session.refreshToken}}
        </td>
      </tr>
    </tbody>
  </table>

  <table class="table">
    <tbody>
      <tr>
        <th>Action</th>
        <th class="text-left">Route</th>
        <th class="text-left">Redirect</th>
        <th></th>
      </tr>
      <tr>
        <td>Login</td>
        <td class="text-nowrap">{{session.defaultLoginRoute}}</td>
        <td class="text-nowrap">{{session.defaultLoginRedirectUri}}</td>
        <td>{{link-to "View" session.defaultLoginRoute}}</td>
      </tr>
      <tr>
        <td>Logout</td>
        <td class="text-nowrap">{{session.defaultLogoutRoute}}</td>
        <td class="text-nowrap">{{session.defaultLogoutRedirectUri}}</td>
        <td>{{link-to "View" session.defaultLogoutRoute}}</td>
      </tr>
    </tbody>
  </table>

{{else}}
  No session
{{/if}}
